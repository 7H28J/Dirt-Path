<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <TerrainDef Name="FloorBase" Abstract="True">
    <edgeType>FadeRough</edgeType>
    <layerable>true</layerable>
    <affordances>
      <li>Light</li>
      <li>Heavy</li>
      <li>SmoothHard</li>
    </affordances>
    <takeFootprints>True</takeFootprints>
    <statBases>
      <WorkToBuild>135</WorkToBuild>
    </statBases>
    <designationCategory>Floors</designationCategory>
    <fertility>0</fertility>
    <constructEffect>ConstructDirt</constructEffect>
    <terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
    </TerrainDef>



  <!-- ================= Misc ================= -->

	<TerrainDef ParentName="FloorBase">
		<defName>DirtPath</defName>
		<label>dirt path</label>
		<description>Simple dirt pathway</description>
		<texturePath>Terrain/Surfaces/DirtPath</texturePath>
    		<edgeType>FadeRough</edgeType>
		<renderPrecedence>320</renderPrecedence>
    		<scatterType>Rocky</scatterType>
		<statBases>
		<Beauty>-1</Beauty>
		<WorkToBuild>35</WorkToBuild>
		</statBases>
		<costList></costList>
	</TerrainDef>

  <TerrainDef ParentName="FloorBase">
    <defName>DirtPath2</defName>
    <label>dirt path alt</label>
    <description>Alternate dirt pathway, Lighter style</description>
    <texturePath>Terrain/Surfaces/DirtPath2</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>320</renderPrecedence>
    <scatterType>Rocky</scatterType>
    <statBases>
    <Beauty>-1</Beauty>
    <WorkToBuild>35</WorkToBuild>
    </statBases>
    <costList></costList>
  </TerrainDef>

  <TerrainDef ParentName="FloorBase">
    <defName>PackedDirt</defName>
    <label>packed dirt</label>
    <description>Packed dirt</description>
    <texturePath>Terrain/Surfaces/PackedDirt</texturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>320</renderPrecedence>
    <scatterType>Rocky</scatterType>
    <statBases>
    <Beauty>0</Beauty>
    <WorkToBuild>70</WorkToBuild>
    </statBases>
    <costList></costList>
  </TerrainDef>

</Defs>
